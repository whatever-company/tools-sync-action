{
  "extends": [
    "config:base",
    "docker:enableMajor",
    "docker:pinDigests",
    "schedule:earlyMondays",
    ":pinAllExceptPeerDependencies",
    ":prHourlyLimitNone",
    ":prConcurrentLimit10",
    ":maintainLockFilesWeekly"
  ],
  "timezone": "Europe/Brussels",
  "ignoreDeps": ["docker"],
  "labels": ["renovate"],
  "github-actions": {
    "enabled": false
  },
  "packageRules": [
    {
      "packageNames": ["ubuntu"],
      "allowedVersions": "<=20.4"
    },

    {
      "packageNames": ["ubuntu", "alpine"],
      "updateTypes": ["digest"],
      "automerge": true
    },
    {
      "languages": ["python"],
      "packageNames": ["pip", "setuptools", "wheel", "poetry"],
      "updateTypes": ["patch", "pin", "digest"],
      "automerge": true
    },
    {
      "languages": ["python"],
      "packageNames": [
        "ansible",
        "botocore",
        "google-cloud-storage",
        "google-api-python-client",
        "pillow",
        "ipython",
        "certifi"
      ],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "languages": ["python"],
      "depTypeList": ["dev-dependencies"],
      "groupName": "dev-packages",
      "automerge": true
    }
  ]
}
